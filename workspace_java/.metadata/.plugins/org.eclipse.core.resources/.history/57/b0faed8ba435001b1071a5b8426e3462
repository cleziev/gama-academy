
public class LojaVirtual {
	public static void main(String[] args) {
		
		Produto p1, p2, p3;
		
		p1 = new Produto ();
		p2 = new Produto ();
		p3 = new Produto ();
		
		
		p1.setCodBarras		= 00001;
		p1.Produto			= "Celular 123";
		p1.Preco			= 100.00;
		p1.Departamento 	= "Smartphone";
		
		
		p1.imprimir();
		
		System.out.println("----->PROMOÇÃO<-----");
		double Descp1 = p1.Desconto(10.0);
		System.out.println("Desconto de 10% = R$ "+Descp1);
				
		
					
					
		p2.CodBarras		= 00002;
		p2.Produto			= " Calça";
		p2.Preco			= 50.00;
		p2.Departamento		= "Roupas";
		
		
		p2.imprimir();
		
		System.out.println("----->PROMOÇÃO<-----");
		double Descp2 = p2.Desconto(15.0);
		System.out.println("Desconto de 15% = R$ "+Descp2);
				
				
					
				
		p3.CodBarras		= 00003;
		p3.Produto			= "Fone";
		p3.Preco			= 10.00;
		p3.Departamento		= "Acessórios";
		
		
		
		p3.imprimir();
		
		System.out.println("----->PROMOÇÃO<-----");
		double Descp3 = p3.Desconto(50.0);
		System.out.println("Desconto de 50% = R$ "+Descp3);
				
		
					
	}
		
	
	}
