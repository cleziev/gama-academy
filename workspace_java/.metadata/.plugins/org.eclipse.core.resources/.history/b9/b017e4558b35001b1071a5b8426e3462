
public class Carro {
	
	String marca;
	String modelo;
	int    ano;
	String cor;
	double preco;
	
	void imprimir(){
		System.out.println("----CARRO----");
		System.out.println("Marca: "+marca+" / "+modelo);
		System.out.println("Ano :"+ano+" Cor: "+cor);
		System.out.println("Preço: R$: "+preco);
	}
	
	/* todo mestodo é um trecho de código
	 * como todo trecho de código, ele segue tamém o padrão E - P - S
	 * 
	 * a declaração do método é feita da seguinte forma:
	 * 
	 * tipoSaida   nomeMetodo (Lista de parametro de entrada){
	 * .... logica (processamente}
	 */
	
	double calcularIPVA(){
		double valorIPVA;
		iF (ano < 2000) {
			valorIPVA = 0;
		}
		else {
			valorIPVA = preco * 0.04;
		}
	}

}
